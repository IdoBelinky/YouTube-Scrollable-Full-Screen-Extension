{
    "manifest_version": 3,
    "name": "YouTube Scrollable Fullscreen",
    "version": "1.3.4",
    "description": "Makes YouTube fullscreen but still scrollable to comments",
    "permissions": ["activeTab", "scripting", "storage"],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
      }
  }
  